<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/BackgroundColor">

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@color/PrimaryColor"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="聆途"
            android:textColor="#ffffff"
            android:textSize="@dimen/NavigationTittleSize"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    android:orientation="vertical"

    >
    <RelativeLayout
        android:id="@+id/test_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_layout"
        android:background="@color/white"
        android:layout_marginBottom="5dp">

        <EditText
            android:id="@+id/friend_search_bar"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:paddingLeft="45dp"
            android:paddingRight="5dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:hint="搜索"
            android:textColor="@color/TittleColor"
            android:textSize="@dimen/TextTextSize"
            android:background="@drawable/icon_search_push"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="800dp"
        android:background="@color/white"
        android:layout_below="@id/test_area">

    </ListView>

</LinearLayout>
    </ScrollView>
</RelativeLayout>