<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/select_btn"
                android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/timg"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textColor="@color/TittleColor"
            android:textSize="@dimen/TittleTextSize"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/TextColor"
            android:text="TextView"
            android:textSize="@dimen/TextTextSize"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/picture"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@id/image"
        android:layout_margin="5dp"
        android:background="@drawable/timg"/>

    <TextView
        android:id="@+id/tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture"
        android:text="西南交通大学一日游，三缺一！！"
        android:layout_marginLeft="5dp"
        android:textColor="@color/TittleColor"
        android:textSize="@dimen/TittleTextSize"/>

    <LinearLayout
        android:id="@+id/evalute"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tittle"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:id="@+id/collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_collect"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_pulldown"/>

            <TextView
                android:id="@+id/text_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="200"
                android:textColor="@color/TextColor"
                android:textSize="@dimen/TextTextSize"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_pulldown"/>

            <TextView
                android:id="@+id/text_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="200"
                android:textColor="@color/TextColor"
                android:textSize="@dimen/TextTextSize"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_pulldown"/>

            <TextView
                android:id="@+id/text_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="200"
                android:textColor="@color/TextColor"
                android:textSize="@dimen/TextTextSize"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_forward"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_pulldown"/>

            <TextView
                android:id="@+id/text_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="200"
                android:textColor="@color/TextColor"
                android:textSize="@dimen/TextTextSize"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
