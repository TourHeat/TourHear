<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/select_btn"
                android:layout_marginTop="10dp"
    >

    <com.example.tr.tourhear.view.CircleImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:src="@drawable/timg"/>



    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/image"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:background="@mipmap/jingdian_jiuzai1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textColor="@color/TittleColor"
            android:textSize="@dimen/TittleTextSize"
            android:textStyle="bold"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture"
        android:text="西南交通大学一日游，三缺一！！"
        android:layout_marginLeft="5dp"
        android:textColor="@color/TittleColor"
        android:textSize="@dimen/TittleTextSize"/>
    <TextView
        android:id="@+id/time"
        android:layout_below="@+id/picture"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:elevation="4dp"
        android:textColor="@color/TextColor"
        android:textSize="@dimen/TextTextSize"
        />
    <LinearLayout
        android:id="@+id/evalute"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tittle"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:id="@+id/collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_collect"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/jingdian_like"/>

            <TextView
                android:id="@+id/text_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="200"
                android:textColor="@color/TextColor"
                android:textSize="@dimen/TextTextSize"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <LinearLayout
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/jingdian_collect"/>

            <TextView
                android:id="@+id/text_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="200"
                android:textColor="@color/TextColor"
                android:textSize="@dimen/TextTextSize"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <LinearLayout
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_pinglun_2"/>

            <TextView
                android:id="@+id/text_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="200"
                android:textColor="@color/TextColor"
                android:textSize="@dimen/TextTextSize"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <LinearLayout
            android:id="@+id/forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_forward"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/jingdian_resend2"/>

            <TextView
                android:id="@+id/text_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="200"
                android:textColor="@color/TextColor"
                android:textSize="@dimen/TextTextSize"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
